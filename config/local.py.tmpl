from config.base import BaseConfig


class LocalConfig(BaseConfig):
    DEBUG = True

    DB_USER = '{{ user }}'
    {% if password -%}
    DB_PASSWORD = '{{ password }}'
    {%- else -%}
    DB_PASSWORD = ''
    {%- endif %}
    DB_HOST = '{{ dbhost }}'
    DB_PORT = {{ dbport }}
    DB_NAME = '{{ dbname }}'
    TEST_DB_NAME = '{{ test_dbname }}'
